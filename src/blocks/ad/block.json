{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "fleximple-blocks/ad",
  "title": "Ad",
  "category": "fleximple-blocks",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": null
    },
    "id": {
      "type": "object",
      "default": {
        "small": null,
        "medium": null,
        "large": null
      }
    },
    "url": {
      "type": "object",
      "default": {
        "small": null,
        "medium": null,
        "large": null
      }
    },
    "size": {
      "type": "object",
      "default": {
        "small": "full",
        "medium": "full",
        "large": "full"
      }
    },
    "width": {
      "type": "object",
      "default": {
        "small": "full",
        "medium": "full",
        "large": "full"
      }
    },
    "alt": {
      "type": "string",
      "source": "attribute",
      "selector": "img",
      "attribute": "alt",
      "default": ""
    },
    "linkUrl": {
      "type": "string"
    },
    "linkTarget": {
      "type": "string",
      "source": "attribute",
      "selector": "figure > a",
      "attribute": "target",
      "default": "_blank"
    }
  }
}
