{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "fleximple-blocks/date-and-time",
  "title": "Date and Time",
  "category": "fleximple-blocks",
  "attributes": {
    "dateFormat": {
      "type": "string",
      "default": ""
    },
    "timeFormat": {
      "type": "string",
      "default": "g:i a"
    },
    "customDateFormat": {
      "type": "string"
    },
    "customTimeFormat": {
      "type": "string"
    },
    "separator": {
      "type": "string",
      "default": "|"
    },
    "displayDate": {
      "type": "boolean",
      "default": true
    },
    "displayTime": {
      "type": "boolean",
      "default": true
    }
  }
}
