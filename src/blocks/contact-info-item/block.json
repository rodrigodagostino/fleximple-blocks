{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "fleximple-blocks/contact-info-item",
  "title": "Contact Info Item",
  "category": "fleximple-blocks",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": null
    },
    "direction": {
      "type": "object",
      "default": {
        "small": "row",
        "medium": "",
        "large": ""
      }
    },
    "gap": {
      "type": "object",
      "default": {
        "small": {
          "value": 12,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    }
  }
}
