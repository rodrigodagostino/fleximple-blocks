{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "fleximple-blocks/header",
  "title": "Header",
  "category": "fleximple-blocks",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": null
    },
    "heading": {
      "type": "string",
      "source": "html",
      "selector": ".fleximple-block-header__heading",
      "default": ""
    },
    "headingLevel": {
      "type": "number",
      "default": 2
    },
    "subhead": {
      "type": "string",
      "source": "html",
      "selector": ".fleximple-block-header__subhead",
      "default": ""
    },
    "textAlignment": {
      "type": "string",
      "default": "center"
    },
    "gap": {
      "type": "object",
      "default": {
        "small": {
          "value": 12,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "marginTop": {
      "type": "object",
      "default": {
        "small": {
          "value": 0,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "marginBottom": {
      "type": "object",
      "default": {
        "small": {
          "value": 0,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "paddingTop": {
      "type": "object",
      "default": {
        "small": {
          "value": 20,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "paddingLeft": {
      "type": "object",
      "default": {
        "small": {
          "value": 0,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "paddingRight": {
      "type": "object",
      "default": {
        "small": {
          "value": 0,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "paddingBottom": {
      "type": "object",
      "default": {
        "small": {
          "value": 20,
          "unit": "px"
        },
        "medium": {
          "value": 0,
          "unit": "px"
        },
        "large": {
          "value": 0,
          "unit": "px"
        }
      }
    },
    "order": {
      "type": "array",
      "default": ["heading", "subhead", "additional"]
    },
    "displayHeading": {
      "type": "boolean",
      "default": true
    },
    "displaySubhead": {
      "type": "boolean",
      "default": true
    },
    "displayAdditional": {
      "type": "boolean",
      "default": false
    }
  }
}
